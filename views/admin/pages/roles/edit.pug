extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thêm mới nhóm quyền

    form(
        action=`${prefixAdmin}/roles/edit/${role.id}?_method=PATCH`
        method="post"
    )
        div(class="form-group")
            label(form="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                name="title"
                id="title"
                value=role.title
                required
            )

        div(class="form-group")
            label(form="desc") Mô tả
            input(
                type="text"
                class="form-control"
                name="description"
                id="desc"
                value=role.description
            )

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật